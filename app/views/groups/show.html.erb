<main role="main">
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3"><%= @group.name %></h1>
      <p>More info coming soon.</p>
      <p><a class="btn btn-primary btn-lg" href="#" role="button">Sign up &raquo;</a></p>
    </div>
  </div>

  <div class="container">
    <p id="notice"><%= notice %></p>
    <h2>Events</h2>
    <table>
      <thead>
        <tr>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @group.events.each do |event| %>
          <tr>
            <td><%= link_to event.name, community_group_event_url(event.community, event.group, event) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <hr>
  </div>
</main>
